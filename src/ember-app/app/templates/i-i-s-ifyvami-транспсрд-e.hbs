<h3 class="ui header">{{t "forms.i-i-s-ifyvami-транспсрд-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.код
      class=(if (v-get validationModel "код" "isInvalid") "error")
      label=(t "forms.i-i-s-ifyvami-транспсрд-e.код-caption")
      data-test-i-i-s-ifyvami-транспсрд-e-код=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "код" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-ifyvami-транспсрд-e.наименование-caption")
      data-test-i-i-s-ifyvami-транспсрд-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-ifyvami-транспсрд-e.типТП-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.типТП
      relationName="типТП"
      projection="типТПL"
      title=(t "forms.i-i-s-ifyvami-транспсрд-e.типТП-caption")
      readonly=readonly
      componentName="типТПLookup"
      class=(if (v-get validationModel "типТП" "isInvalid") "error")
      data-test-i-i-s-ifyvami-транспсрд-e-типТП=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "типТП" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.типТП.тип
      class=(if (v-get validationModel.типТП "тип" "isInvalid") "error")
      label=(t "forms.i-i-s-ifyvami-транспсрд-e.типТП.тип-caption")
      data-test-i-i-s-ifyvami-транспсрд-e-типТП-тип=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.типТП "тип" "message")}}
  </div>
</form>
